{
  "expo": {
    "name": "David's Salon",
    "slug": "davids-salon-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "sdkVersion": "54.0.0",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#160B53"
    },
    "notification": {
      "icon": "./assets/logo.png",
      "color": "#160B53",
      "androidMode": "default",
      "androidCollapsedTitle": "David's Salon"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.davidssalon.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSCameraUsageDescription": "David's Salon needs camera access to upload portfolio photos and profile pictures.",
        "NSPhotoLibraryUsageDescription": "David's Salon needs photo library access to select images for your portfolio and profile.",
        "NSPhotoLibraryAddUsageDescription": "David's Salon needs permission to save photos to your library.",
        "NSLocationWhenInUseUsageDescription": "David's Salon uses your location to find nearby salon branches and provide location-based services."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#160B53"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.davidssalon.mobile",
      "versionCode": 1,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "NOTIFICATIONS",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "description": "Professional hair salon services at your fingertips",
    "primaryColor": "#160B53",
    "platforms": ["ios", "android", "web"],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
